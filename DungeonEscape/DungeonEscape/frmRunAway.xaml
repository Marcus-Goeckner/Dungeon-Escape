<Window x:Class="DungeonEscape.frmRunAway"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DungeonEscape"
        mc:Ignorable="d"
        Title="You Ran Away!" Height="250" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="Black" Offset="0.2"/>
            <GradientStop Color="#FF6E0000" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock x:Name="tbRanAway" HorizontalAlignment="Left" Margin="32,42,0,0" TextWrapping="Wrap" Text="You got away unscathed." VerticalAlignment="Top" Height="80" Width="223" TextAlignment="Center" FontSize="20" FontFamily="Monotype Corsiva" Foreground="White"/>
        <Button x:Name="btnOk" Content="Ok" HorizontalAlignment="Left" Margin="113,136,0,0" VerticalAlignment="Top" Width="66" Height="26" FontFamily="Monotype Corsiva" FontSize="16" Click="btnOk_Click"/>

    </Grid>
</Window>
