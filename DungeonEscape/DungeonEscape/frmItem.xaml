<Window x:Class="DungeonEscape.frmItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DungeonEscape"
        mc:Ignorable="d"
        Title="An Item!" Height="250" Width="300" FontFamily="Monotype Corsiva" FontSize="14" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Background>
        <RadialGradientBrush>
            <GradientStop Color="Black" Offset="0.2"/>
            <GradientStop Color="#FF6E0000" Offset="1"/>
        </RadialGradientBrush>
    </Window.Background>
    <Grid>
        <TextBlock x:Name="tbFoundItem" HorizontalAlignment="Left" Margin="16,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="86" Width="257" FontFamily="Monotype Corsiva" FontSize="20" TextAlignment="Center" Foreground="White"/>
        <Button x:Name="btnYes" Content="Yes" HorizontalAlignment="Left" Margin="55,148,0,0" VerticalAlignment="Top" Width="65" Height="25" FontFamily="Monotype Corsiva" FontSize="16" Click="btnYes_Click"/>
        <Button x:Name="btnNo" Content="No" HorizontalAlignment="Left" Margin="174,148,0,0" VerticalAlignment="Top" Width="65" Height="25" FontFamily="Monotype Corsiva" FontSize="16" Click="btnNo_Click"/>

    </Grid>
</Window>
